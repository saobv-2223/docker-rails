<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("ror"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("en"), locale: :en %></li>
        <li><%= link_to t("vi"), locale: :vi %></li>
        <li><%= link_to t("home"), home_path %></li>
        <li><%= link_to t("help"), help_path %></li>
        <% if logged_in %>
          <li><%= link_to t("users.index.title"), users_path %></li>
          <li class="dropdown">
            <%= link_to current_user.name, user_path(current_user), class: "dropdown-toggle",
                "data-toggle": "dropdown" %>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), user_path(current_user) %></li>
              <li><%= link_to t("setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("auths.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
