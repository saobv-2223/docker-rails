<%= provide :title, t("log_in") %>
<h1 class="text-center"><%= t "log_in" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:auth, url: login_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("users.new.password") %>
      <%= link_to t("auths.forget_password.forget_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember, class: "checkbox-inline" do %>
        <%= f.check_box :remember %>
        <span><%= t "auths.remember_me" %></span>
      <% end %>
      <%= f.submit t("log_in"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t "auths.no_have_account" %> <%= link_to t("sign_up"), signup_path %></p>
  </div>
</div>
